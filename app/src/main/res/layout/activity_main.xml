<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textview1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="#E00101"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:text="1"
        android:textSize="35sp"></TextView>
    <TextView
        android:id="@+id/textview2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="#278F2A"
        android:gravity="center"
        android:layout_toLeftOf="@+id/textview1"
        android:layout_above="@+id/textview1"
        android:text="2"
        android:textSize="35sp"></TextView>
    <TextView
        android:id="@+id/textview3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="#A78108"
        android:gravity="center"
        android:layout_toLeftOf="@+id/textview1"
        android:layout_below="@+id/textview1"
        android:text="3"
        android:textSize="35sp"></TextView>
    <TextView
        android:id="@+id/textview4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="#7E1591"
        android:gravity="center"
        android:layout_toRightOf="@+id/textview1"
        android:layout_above="@+id/textview1"
        android:text="4"
        android:textSize="35sp"></TextView>
    <TextView
        android:id="@+id/textview5"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="#812307"
        android:gravity="center"
        android:layout_toRightOf="@+id/textview1"
        android:layout_below="@+id/textview1"
        android:text="5"
        android:textSize="35sp"></TextView>
    <TextView
        android:id="@+id/textview6"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="#613C05"
        android:gravity="center"
        android:text="6"
        android:textSize="35sp"></TextView>
    <TextView
        android:id="@+id/textview7"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="#0F6F57"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="7"
        android:textSize="35sp"></TextView>
    <TextView
        android:id="@+id/textview9"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="#E69724"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="9"
        android:textSize="35sp"></TextView>
    <TextView
        android:id="@+id/textview8"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="#1B2769"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="8"
        android:textSize="35sp"></TextView>


</RelativeLayout>